# Breakpoint Admin API Configuration
# Copy this to .env and configure values

# API Base URL - External Breakpoint API on Render
# Leave empty for same-origin (development with local backend)
# Set to external API URL for production
VITE_API_URL=https://breakpoint-api.onrender.com

# Database (for local backend)
DATABASE_URL=postgresql://user:password@host:5432/database

# Pool Brain API
POOLBRAIN_ACCESS_KEY=your_access_key
POOLBRAIN_COMPANY_ID=your_company_id

# QuickBooks OAuth
QUICKBOOKS_CLIENT_ID=your_client_id
QUICKBOOKS_CLIENT_SECRET=your_client_secret
QUICKBOOKS_REDIRECT_URI=https://your-app.com/api/quickbooks/callback

# Azure/Outlook
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id

# Session
SESSION_SECRET=your_session_secret
